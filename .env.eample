# D:\AI_Project\GIAv2.0\config\.env.example

# 이 파일은 환경 변수 템플릿입니다.
# 실제 사용 시에는 이 파일을 .env 로 복사하여 사용하고,
# 민감한 정보는 Git에 커밋하지 않도록 .gitignore에 추가해야 합니다.

# === API Keys ===
# 네이버 뉴스 API 클라이언트 ID 및 시크릿
NAVER_NEWS_CLIENT_ID=YOUR_NAVER_NEWS_CLIENT_ID
NAVER_NEWS_CLIENT_SECRET=YOUR_NAVER_NEWS_CLIENT_SECRET

# 나라장터 API 키 (필요시)
NARAGARTE_API_KEY=YOUR_NARAGARTE_API_KEY

# 국방조달 API 키 (필요시)
DEFENSE_PROCUREMENT_API_KEY=YOUR_DEFENSE_PROCUREMENT_API_KEY

# LLM (Large Language Model) API 키
# 예: Google Gemini API Key, OpenAI API Key 등
LLM_API_KEY=YOUR_LLM_API_KEY
LLM_MODEL_NAME=gemini-2.0-flash # 또는 gpt-4o, claude-3-opus 등

# === Database Settings ===
# 데이터베이스 연결 정보 (예: 로컬 SQLite, PostgreSQL 등)
# SQLite 예시:
DATABASE_URL=sqlite:///./data/info_collection.db

# PostgreSQL 예시: (필요시 주석 해제 후 사용)
# DATABASE_URL=postgresql://user:password@host:port/database_name

# === Application Settings ===
# 정보 수집 주기 (초 단위)
COLLECTION_INTERVAL_SECONDS=3600 # 1시간마다 수집

# 중요 정보 알림 임계값 (예: LLM 중요도 점수)
IMPORTANCE_THRESHOLD=0.8

# 로그 레벨 (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# === Notion API Settings ===
# 노션 통합 정보 데이터베이스 ID
NOTION_INFO_DATABASE_ID=YOUR_NOTION_INFO_DATABASE_ID
# 노션 API 토큰
NOTION_API_TOKEN=YOUR_NOTION_API_TOKEN

# === 기타 설정 ===
# 기타 필요한 환경 변수를 여기에 추가하세요.
